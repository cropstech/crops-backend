# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=False
DJANGO_SETTINGS_MODULE=crops.settings_production

# Database Configuration (PostgreSQL for production)
DATABASE_URL=postgres://username:password@host:5432/database_name

# Redis Configuration
REDIS_URL=redis://host:6379/0
CELERY_BROKER_URL=redis://host:6379/0
CELERY_RESULT_BACKEND=redis://host:6379/1

# Domain Configuration
ALLOWED_HOSTS=your-domain.com,*.lightsail.aws.com,*.amazonaws.com
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-app-domain.com
CSRF_TRUSTED_ORIGINS=https://your-frontend-domain.com,https://your-app-domain.com
FRONTEND_URL=https://your-frontend-domain.com
WEBHOOK_BASE_URL=https://your-api-domain.com

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
S3_ACCESS_KEY_ID=your-s3-specific-access-key-id
S3_SECRET_ACCESS_KEY=your-s3-specific-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_STORAGE_CDN_BUCKET_NAME=your-cdn-bucket-name
AWS_S3_LOCATION=us-east-2
AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.cloudfront.net

# AWS SES Configuration
AWS_SES_ACCESS_KEY_ID=your-ses-access-key-id
AWS_SES_SECRET_ACCESS_KEY=your-ses-secret-access-key
AWS_SES_REGION_NAME=us-east-2

# External API Configuration
ASSET_CHECKER_API_URL=https://your-asset-checker-api-url.com
LAMBDA_AUTH_TOKEN=your-lambda-auth-token

# SSL Configuration (for production)
SECURE_SSL_REDIRECT=True